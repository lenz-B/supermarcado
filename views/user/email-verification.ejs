    <!-- timer script -->
    <script>
        let timerDuration = 30; // Duration
        let timerInterval;

        function startTimer() {
            let timerDisplay = document.getElementById("timerText");
            let seconds = timerDuration;
            
            timerInterval = setInterval(function() {
                seconds--;
                if (seconds <= 0) {
                    clearInterval(timerInterval);
                    document.getElementById("resendbtn").disabled = false;
                    timerDisplay.textContent = "";
                } else {
                let timerText = "Resend OTP in <span style='color: #28a745;'>" + seconds + "</span> seconds";
                timerDisplay.innerHTML = timerText;
            }
            }, 1000);
        }


