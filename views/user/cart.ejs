    <!-- SHOPING CART AREA START -->
    <div class="liton__shoping-cart-area mb-120">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping-cart-inner">
                        <div class="shoping-cart-table table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th class="cart-product-remove">Remove</th>
                                        <th class="cart-product-image">Image</th>
                                        <th class="cart-product-info">Product</th>
                                        <th class="cart-product-price">Price</th>
                                        <th class="cart-product-quantity">Quantity</th>
                                        <th class="cart-product-subtotal">Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (cartData && cartData.products) { %>
                                        <% cartData.products.forEach(product => { %>
                                            <tr data-product-id="<%= product.product_id._id %>">
                                                <td class="cart-product-remove">
                                                    <button class="remove-product-btn" data-product-id="<%= product.product_id._id %>">x</button>
                                                </td>
                                                <td class="cart-product-image">
                                                    <a href="/product-details?proId=<%= product.product_id._id %>"><img src="/productImage/<%= product.product_id.img[0] %>" alt="#"></a>
                                                </td>
                                                <td class="cart-product-info">
                                                    <h4><a href="/product-details?proId=<%= product.product_id._id %>"><%= product.product_id.name %></a></h4>
                                                </td>
                                                <td class="cart-product-price">$<%= product.product_id.price %></td>
                                                <td class="cart-product-quantity">
                                                    <div class="cart-plus-minus">
                                                        <input type="number" value="<%= product.quantity %>" class="cart-plus-minus-box quantity-input" data-product-id="<%= product.product_id._id %>">
                                                    </div>
                                                </td>
                                                <td class="cart-product-subtotal"><span class="cart-subtotal">$<%= product.product_id.price * product.quantity %></span></td>
                                            </tr>
                                        <% }); %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="6">No products in the cart.</td>
                                        </tr>
                                    <% } %>
                                    <tr class="cart-coupon-row">
                                        <td colspan="6">
                                            <div class="cart-coupon">
                                                <input type="text" name="cart-coupon" placeholder="Coupon code">
                                                <button type="submit" class="btn theme-btn-2 btn-effect-2">Apply Coupon</button>
                                            </div>
                                        </td>
                                        <td>
                                            <button type="submit" id="submitButton" class="btn theme-btn-2 btn-effect-2 btn-update-cart">Update Cart</button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                                                                               
                        </div>
                        <div class="shoping-cart-total mt-50">
                            <h4>Cart Totals</h4>
                            <table class="table">
                                <tbody>
                                    <% let cartSubtotal = 0; %>
                                    <% if (cartData && cartData.products) { %>
                                        <% cartData.products.forEach(product => { %>
                                            <% cartSubtotal += product.product_id.price * product.quantity; %>
                                        <% }); %>
                                    <% } %>
                                    <tr>
                                        <td>Cart Subtotal</td>
                                        <td>$<%= cartSubtotal.toFixed(2) %></td>    
                                    </tr>
                                    <tr>
                                        <td>Shipping and Handing</td>
                                        <td>$15.00</td>
                                    </tr>
                                    <tr>
                                        <td>Vat</td>
                                        <td>$00.00</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Order Total</strong></td>
                                        <td><strong>$<%= (cartSubtotal + 15).toFixed(2) %></strong></td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="btn-wrapper text-right text-end">
                                <a href="/checkout" class="theme-btn-1 btn btn-effect-1">Proceed to checkout</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
