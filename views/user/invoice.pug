doctype html
html
  head
    title Invoice
    style.
      body {
        font-family: Arial, sans-serif;
        padding: 20px;
      }
      h1 {
        text-align: center;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
      }
      th, td {
        padding: 8px 12px;
        border: 1px solid #ddd;
        text-align: left;
      }
  body
    h1 Invoice
    table
      tbody
        each item in order.orderedItems
          tr
            td #{item.product_id.name} Ã— #{item.quantity}
            td $#{(item.product_id.price * item.quantity).toFixed(2)}
        tr
          td Shipping and Handling
          td $15.00
        tr
          td Vat
          td $0.00
        tr
          td Order Total
          td $#{order.totalAmount.toFixed(2)}
        tr
          td Status
          td #{order.orderStatus}
        tr
          td Payment Method
          td #{order.paymentMethod}
        tr
          td Order Address
          td 
            | #{order.address.name}
            br
            | #{order.address.mobile}
            br
            | #{order.address.address}
            br
            | #{order.address.city}, #{order.address.state}, #{order.address.pin}
