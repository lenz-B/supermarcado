    <!-- Add to cart modal -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const cartButtons = document.querySelectorAll('.add-to-cart-btn');
        
            cartButtons.forEach(button => {
                button.addEventListener('click', function(event) {
                    event.preventDefault();
                    const productId = this.getAttribute('data-product-id');
                    const productName = this.getAttribute('data-product-name');
                    const productPrice = this.getAttribute('data-product-price');
                    const productImg = this.getAttribute('data-product-img');
                    const quantity = parseInt(this.closest('.ltn__product-details-menu-2').querySelector('.cart-plus-minus-box').value);
        
                    fetch('/add-to-cart', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            productId: productId,
                            quantity: quantity
                        })
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.redirectTo) {
                            window.location.href = data.redirectTo;
                            return;
                        }
                        const modalImg = document.querySelector('#add_to_cart_modal .modal-product-img img');
                        const modalTitle = document.querySelector('#add_to_cart_modal .modal-product-info h5 a');
                        const modalMessage = document.querySelector('#add_to_cart_modal .added-cart');
                        const modalButtons = document.querySelector('#add_to_cart_modal .btn-wrapper');
                        const modalAdditionalInfo = document.querySelector('#add_to_cart_modal .additional-info');
                        
                        modalImg.src = productImg;
                        modalTitle.textContent = productName;
                        modalAdditionalInfo.classList.add('d-none');
        
                        if (data.success) {
                            modalMessage.innerHTML = '<i class="fa fa-check-circle"></i> Successfully added to your Cart';
                            modalButtons.classList.remove('d-none');
                        } else {
                            modalMessage.innerHTML = '<i class="fa fa-times-circle"></i> Failed to add product to your Cart';
                            modalButtons.classList.add('d-none');
                        }
        
                        const addCartModal = new bootstrap.Modal(document.getElementById('add_to_cart_modal'));
                        addCartModal.show();
                    })
                    .catch(error => {
                        console.error('Error:', error);
                    });
                });
            });
        
            const modalElement = document.getElementById('add_to_cart_modal');
            modalElement.addEventListener('hidden.bs.modal', function (event) {
                document.querySelectorAll('.modal-backdrop').forEach(function(backdrop) {
                    backdrop.remove();
                });
                document.body.classList.remove('modal-open');
                document.body.style.paddingRight = '';
            });

            const addCartModal = document.getElementById('add_to_cart_modal');
            addCartModal.addEventListener('hidden.bs.modal', function () {
                document.body.style.overflow = 'auto';
            });
        });
    </script>
    <!-- add to wishlist -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const wishlistButtons = document.querySelectorAll('.add-to-wishlist-btn');
            const wishlistModal = document.getElementById('liton_wishlist_modal');
            const productImg = wishlistModal.querySelector('.modal-product-img img');
            const productName = wishlistModal.querySelector('.modal-product-info h5 a');
            const addedCartMessage = wishlistModal.querySelector('.added-cart');
        
            wishlistButtons.forEach(wishlistButton => {
                wishlistButton.addEventListener('click', function(event) {
                    event.preventDefault();
        
                    const product_id = wishlistButton.getAttribute('data-product-id');
                    const productImgSrc = wishlistButton.getAttribute('data-product-img');
                    const productNameText = wishlistButton.getAttribute('data-product-name');
        
                    fetch('/add-to-wishlist', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ product_id })
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.redirectTo) {
                            window.location.href = data.redirectTo;
                            return;
                        }
                        if (data.status) {
                            // Update modal content
                            productImg.src = productImgSrc;
                            productName.textContent = productNameText;
                            addedCartMessage.innerHTML = '<i class="fa fa-check-circle"></i> Successfully added to your Wishlist';
        
                            // Show modal
                            $(wishlistModal).modal('show');
                        } else {
                            alert('Failed to add product to wishlist: ' + data.message);
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('An error occurred while adding to wishlist.');
                    });
                });
            });
        });
