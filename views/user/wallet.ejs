<%- include('../layout/header.ejs') %>
    <!-- HEADER AREA END -->

    <div class="ltn__utilize-overlay"></div>

    <!-- BREADCRUMB AREA START -->
    <div class="ltn__breadcrumb-area ltn__breadcrumb-area-2 ltn__breadcrumb-color-white bg-overlay-theme-black-90 bg-image" data-bg="img/bg/9.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ltn__breadcrumb-inner ltn__breadcrumb-inner-2 justify-content-between">
                        <div class="section-title-area ltn__section-title-2">
                            <h1 class="section-title white-color">Wallet</h1>
                        </div>
                        <div class="ltn__breadcrumb-list">
                            <ul>
                                <li><a href="/">Home</a></li>
                                <li>Wallet</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- BREADCRUMB AREA END -->

    <!-- WISHLIST AREA START -->
    <<div class="liton__wishlist-area mb-105">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping-cart-inner">
                        <h2>Wallet</h2>
                        <% if (walletData) { %>
                          <p>Username: <%= walletData.user_id.username %></p>
                          <h3>Wallet Amount: ₹<%= walletData.wallet_amount.toFixed(2) %></h3>
                          <h4>Transaction History</h4>
                          <% if (paginatedTransactions.length > 0) { %>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Index</th>
                                        <th>Amount</th>
                                        <th>Payment Type</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% paginatedTransactions.forEach((transaction, index) => { %>
                                        <tr>
                                            <td><%= ((page - 1) * limit) + index + 1 %></td>
                                            <td>₹<%= transaction.amount.toFixed(2) %></td>
                                            <td><%= transaction.Payment_type %></td>
                                            <td><%= new Date(transaction.date).toLocaleDateString() %></td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                          <% } else { %>
                            <p>No transactions found.</p>
                          <% } %>
                        <% } else { %>
                          <p>Wallet not found.</p>
                        <% } %>
                      </div>
                      
                </div>
            </div>
        </div>
    </div>
    <!-- WISHLIST AREA START -->


    <div class="ltn__pagination-area text-center">
        <div class="ltn__pagination">
            <ul>
                <li><a href="/wallet?page=<%= Number(page) - 1 %>"><i class="fas fa-angle-double-left"></i></a></li>
                <% for(let i = 1; i <= pageCount; i++){ %>
                <li class="<%= page == i ? 'active': '' %>"><a href="/wallet?page=<%= i %>"><%= i %></a></li>
                <% } %>
                <li><a href="/wallet?page=<%= Number(page) + 1 %>"><i class="fas fa-angle-double-right"></i></a></li>
            </ul>
        </div>
    </div>

    <!-- FOOTER AREA START -->
        <!-- footer -->
 <%- include('../layout/footer.ejs') %>
    <!-- FOOTER AREA END -->
</div>
<!-- Body main wrapper end -->

    <!-- All JS Plugins -->
    <script src="js/plugins.js"></script>
    <!-- Main JS -->
    <script src="js/main.js"></script>
  
</body>

</html>

