        <script>
            document.addEventListener('DOMContentLoaded', function() {
                const menuItems = document.querySelectorAll('#menu-aside .menu-item a');
                
                function setActiveMenuItem() {
                    // Remove 'active' class from all menu items
                    menuItems.forEach(menuItem => menuItem.parentElement.classList.remove('active'));

                    // Get current page from localStorage or from URL
                    const currentPage = localStorage.getItem('activePage') || window.location.pathname;
                    
                    // Find the menu item that matches the current page
                    menuItems.forEach(menuItem => {
                        if (menuItem.getAttribute('href') === currentPage) {
                            menuItem.parentElement.classList.add('active');
                        }
                    });
                }

                menuItems.forEach(item => {
                    item.addEventListener('click', function() {
                        // Store the clicked page in localStorage
                        localStorage.setItem('activePage', this.getAttribute('href'));
                    });
                });

                // Set the active menu item on page load
                setActiveMenuItem();
            });
        </script>