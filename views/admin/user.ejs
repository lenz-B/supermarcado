<section class="content-main">
    <div class="content-header">
        <h2 class="content-title">Users list</h2>
    </div>
    <div class="card mb-4">
        <header class="card-header">
            <!-- <div class="row gx-3">
                <div class="col-lg-4 col-md-6 me-auto">
                    <input type="text" placeholder="Search..." class="form-control" />
                </div>
                <div class="col-lg-2 col-md-3 col-6">
                    <select class="form-select">
                        <option>Status</option>
                        <option>Active</option>
                        <option>Disabled</option>
                        <option>Show all</option>
                    </select>
                </div>
                <div class="col-lg-2 col-md-3 col-6">
                    <select class="form-select">
                        <option>Show 20</option>
                        <option>Show 30</option>
                        <option>Show 40</option>
                    </select>
                </div>
            </div> -->
        </header>
        <!-- card-header end// -->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Email</th>
                            <!-- <th>Status</th> -->
                            <th class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (userData !== "undefined") { %>
                        <% userData.forEach(element => { %>
                        <tr>
                            <td width="40%">
                                <a href="#" class="itemside">
                                    <div class="info pl-3">
                                        <h6 class="mb-0 title"><%= element.username %></h6>
                                        <!-- <small class="text-muted">Seller ID: #439</small> -->
                                    </div>
                                </a>
                            </td>
                            <td><%= element.email %></td>
                            <td class="text-end">
                                <% if (!element.is_block) { %>
                                    <button
                                        id="block-btn-<%=element._id %>"
                                        class="btn btn-sm btn-brand font-sm mt-15" 
                                        onclick="updateUserStatus('<%=element._id %>', false)">
                                        <i class="material-icons md-check_circle"></i>
                                        Active
                                    </button>
                                <% } else { %>
                                    <button 
                                        id="block-btn-<%=element._id %>"
                                        class="btn btn-sm btn-outline-danger font-sm mt-15" 
                                        onclick="updateUserStatus('<%=element._id %>', true)">
                                        <i class="material-icons md-block"></i>
                                        Blocked
                                    </button>
                                <% } %>
                            </td>
                        </tr>
                        <% }); %>
                        <% } %>
                    </tbody>
                </table>
                <!-- table-responsive.// -->
            </div>
        </div>
        <!-- card-body end// -->
    </div>
    <!-- card end// -->
    <div class="pagination-area mt-15 mb-50">
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-start">
                <% for(let i = 1; i <= pageCount; i++){ %>
                <li class="page-item <%= page == i ? 'active': '' %>"><a class="page-link" href="/admin/user?page=<%= i %>"><%= i %></a></li>
                <% } %>
                <li class="page-item">
                    <a class="page-link" href="/admin/user?page=<%= Number(page) + Number(1) %>"><i class="material-icons md-chevron_right"></i></a>
                </li>
            </ul>
        </nav>
    </div>
</section>
<!-- content-main end// -->

<script>
    function updateUserStatus(userId, isBlocked) {
        console.log('frontend user id: ' + userId);
        axios.post(`/admin/user/${userId}`)
            .then(response => {
                if (response.data.success) {
                    console.log('data.success: ' + response.data.success);
                    let button = document.getElementById(`block-btn-${userId}`);
                    if (isBlocked) {
                        button.classList.remove('btn-outline-danger');
                        button.classList.add('btn-brand');
                        button.innerHTML = '<i class="material-icons md-check_circle"></i> Active';
                        button.setAttribute('onclick', `updateUserStatus('${userId}', false)`);
                    } else {
                        button.classList.remove('btn-brand');
                        button.classList.add('btn-outline-danger');
                        button.innerHTML = '<i class="material-icons md-block"></i> Blocked';
                        button.setAttribute('onclick', `updateUserStatus('${userId}', true)`);
                    }
                } else {
                    alert("An error occurred");
                }
            })
            .catch(error => {
                console.log("Error in blocking and unblocking", error);
            });
    }
</script>



