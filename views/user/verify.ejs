    <!-- otp-verification -->
    <script>
        function checkOtp(tag){
            console.log(tag.value.trim())
            const input = tag.value.trim()
            const subBtn= document.getElementById('verifybtn')
            subBtn.disabled=true
            if(input.length==6){
                fetch('/verify',{
                    method:'POST',
                    headers: {
                    'content-type': 'application/json'
                },
                body: JSON.stringify({otp:input})
    
                }).then(res => res.json()).then(data => {
                    if(data.status){
                        subBtn.disabled=false
                    }else{
                        console.log("try again")
                    }
                })
            }
            
        }
        function verfiedSubmit(){
            fetch('/saving-data',{
                method:'PUT',
                
            }).then(res=>res.json()).then(data=>{
                if(data.status) {
                        Swal.fire({
                            title: 'Registered Successfully!',
                            text: data.message,
                            icon: 'success',
                            timer: 3000,
                            showConfirmButton: true,
                            confirmButtonColor: '#28a745' // green
                        }).then((result) => {
                            window.location.href = '/';
                        });
    
                        setTimeout(() => {
                            window.location.href = '/';
                        }, 3000);
                    } else {
                    alert('user verification failed')
                }
            })
        }
    </script>

    <!-- timer script -->
    <script>
        let timerDuration = 30; // Duration
        let timerInterval;

        function startTimer() {
            let timerDisplay = document.getElementById("timerText");
            let seconds = timerDuration;
            
            timerInterval = setInterval(function() {
                seconds--;
                if (seconds <= 0) {
                    clearInterval(timerInterval);
                    document.getElementById("resendbtn").disabled = false;
                    timerDisplay.textContent = "";
                } else {
                let timerText = "Resend OTP in <span style='color: #28a745;'>" + seconds + "</span> seconds";
                timerDisplay.innerHTML = timerText;
            }
            }, 1000);
        }


        function resendOtp() {
            document.getElementById("resendbtn").disabled = true;
            fetch('/resend-otp', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
            })
            .then(response => response.json())
            .then(data => {
                if (data.status) {
                    clearInterval(timerInterval);
                    startTimer();
                } else {
                    console.log('Failed to resend OTP');
                }
            })
            .catch(error => {
                console.error('Error resending OTP:', error);
            });
        }
        
        startTimer();
    </script>

