    <!-- ADD TO CART -->
    <script>
        function addToCart(productId) {
            const quantity = 1;

            fetch('/add-to-cart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ productId: productId, quantity: quantity })
            })
            .then(response => {
                if (response.ok) {
                    console.log('Product added to cart');
                } else {
                    console.error('Failed to add product to cart');
                }
            })
            .catch(error => {
                console.error('Error adding product to cart:', error);
            });
        }
    </script>
    <!-- filter and sort -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const priceSlider = document.getElementById('price-slider');
            const priceInput = document.getElementById('price-input');
    
      
            $(function () {
                $("#price-slider").slider({
                    range: true,
                    min: 0,
                    max: 1000, // Set your max price range here
                    values: [0, 1000],
                    slide: function (event, ui) {
                        $("#price-input").val("$" + ui.values[0] + " - $" + ui.values[1]);
                    }
                });
                $("#price-input").val("$" + $("#price-slider").slider("values", 0) +
                    " - $" + $("#price-slider").slider("values", 1));
            });
    
            // Event listener for changes in the price range
            priceSlider.addEventListener('change', function () {
                applyFilters();
            });
        });
    
        document.querySelectorAll('.category-filter').forEach(item => {
            item.addEventListener('click', function (event) {
                event.preventDefault();
                const categoryId = this.getAttribute('data-category-id');
                applyFilters(categoryId);
            });
        });

        
    
        function applyFilters(categoryId = null) {
            const sortOption = document.getElementById('sort-options').value;
            const priceRange = document.getElementById('price-input').value;
            const urlParams = new URLSearchParams(window.location.search);

            if (categoryId === "") {
                urlParams.delete('category');
            } else if (categoryId) {
                urlParams.set('category', categoryId);
            }

            if (sortOption && sortOption !== 'default') {
                urlParams.set('sort', sortOption);
            } else {
                urlParams.delete('sort');
            }

            if (priceRange) {
                urlParams.set('price', priceRange);
            } else {
                urlParams.delete('price');
            }

            window.location.href = `/products?${urlParams.toString()}`;
        }
            
        // Preserve selected sort option, category filter, and price range on page reload
        window.addEventListener('load', () => {
            const urlParams = new URLSearchParams(window.location.search);
            const selectedSort = urlParams.get('sort');
            const sortSelect = document.getElementById('sort-options');
            const selectedCategory = urlParams.get('category');
            const selectedPriceRange = urlParams.get('price');

            if (selectedSort) {
                // Check if the option exists before setting it
                if (Array.from(sortSelect.options).some(option => option.value === selectedSort)) {
                sortSelect.value = selectedSort;
                } else {
                sortSelect.value = 'default';
                }
            } else {
                sortSelect.value = 'default';
            }
    
            if (selectedCategory) {
                document.querySelectorAll('.category-filter').forEach(item => {
                    if (item.getAttribute('data-category-id') === selectedCategory) {
                        item.classList.add('active'); 
                    }
                });
            } else {
                document.querySelector('.category-filter[data-category-id=""]').classList.add('active');
            }
    
            if (selectedPriceRange) {
                document.getElementById('price-input').value = selectedPriceRange;
            }
        });
    </script>
  
